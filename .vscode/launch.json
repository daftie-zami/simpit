            "runToEntryPoint": "main",
            "showDevDebugOutput": "vscode",
            // "svdFile": "${workspaceRoot}/path/to/your_device.svd",
            "postLaunchCommands": [
                "break main",
                "continue"
            ]
        }
    ]
}
